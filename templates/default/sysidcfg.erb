system_locale=C
timezone=<%= node[:zone][:timezone] %>
terminal=xterms
security_policy=NONE
root_password=<%= @zone.password %>
timeserver=<%= node[:zone][:timeserver] %>
name_service=DNS {domain_name=<%= node[:domain] %>
       name_server=<%= node[:zone][:dns_servers].join(',') %>}
network_interface=primary { hostname=<%= @zone.name %>
       ip_address=<%= @zone.ip.split('/').first %>
       netmask=<%= node[:network][:interfaces][@zone.interface][:addresses][node[:network][:interfaces][@zone.interface][:addresses].to_hash.keys.select{|k| k =~ /\d.\d.\d.\d/}.first][:netmask] %>
       protocol_ipv6=no
       default_route=<%= node[:network][:default_gateway] %>}
nfs4_domain=dynamic
